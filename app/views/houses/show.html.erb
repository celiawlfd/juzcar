

  <div class="banner" style="background-image: url(https://cdnb.artstation.com/p/assets/images/images/001/678/075/large/root-pid-smurf-02.jpg?1450698589);">
    <%= link_to "Back to list", houses_path, class: "btn btn-secondary rounded-5" %>
  </div>
  <div class="container px-5 p-10">
    <div class="row">
      <div class="col-8">
        <div class="card p-2 my-3 border border-dark">
          <h1><%= @house.name %></h1>
        </div>
        <div class="card p-1 my-3 border border-dark">
          <h3>Description</h3>
          <p><%= @house.description %></p>
        </div>
      </div>
      <div class="col-4">
        <div class="card p-3 my-3 border border-dark">
          <h3>Details</h3>
          <p>Price :<%= @house.price_per_night %></p>
          <p>Rating :</p>
          <p>People :<%= @house.number_of_people %></p>
          <form class="card border-0">
            <% unless current_user == @house.user %>
              <div class="row">

              </div>
            <% end %>
          </form>
        </div>
      </div>

       <% if current_user == @house.user %>
          <%= link_to "Edit this house", edit_house_path(@house) %> |
          <%= link_to "Delete",
          house_path(@house),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
       <% end %>
    </div>
  </div>





        <%= simple_form_for [@house, @reservation] do |f| %>
                  <div class="col-6">
                    <%= f.input :arrival_date, as: :date, html5: true%>
                  </div>
                  <div class="col-6">
                    <%= f.input :departure_date, as: :date, html5: true %>
                  </div>
                  <div class="col-12 d-flex justify-content-center">
                    <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">Book now !</button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Reservation recap' for <%= @house.name %></h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <h5>Number for nights : <%=  %></h5>
                            <p>Arrival date : <%= @reservation.arrival_date %></p>
                            <p>Departure date : <%= @reservation.departure_date %></p>
                            <h5>Total price : <%=  %></h5>
                            <p>Price per night : <%= @house.price_per_night %></p>
                            <%# <p>Juzcar fees (20%%) : <%= @house.price_per_night/0,2</p> %>
                            <%# <p>Cleaning fees (10%) : <%= @house.price_per_night/0,1</p> %>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <%= f.submit 'Book now !', class: "btn btn-outline-dark"%>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
